# Configuración del Microservicio de IA - Maransa

# Base de datos PostgreSQL (misma que el backend principal)
DATABASE_URL=postgresql://user:password@localhost:5432/maransa_db

# Servidor Ollama local
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b

# APIs externas
WEATHER_API_KEY=tu_api_key_openweathermap
EXCHANGE_API_KEY=tu_api_key_exchangerate

# URLs de fuentes de datos ecuatorianas
BCE_API_URL=https://contenido.bce.fin.ec/api/indicadores
CNA_DATA_URL=https://www.cna-ecuador.com

# Configuración del servicio
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8000
DEBUG=true

# Almacenamiento de modelos
MODEL_STORAGE_PATH=./models
DATA_CACHE_PATH=./cache

# Intervalos de actualización (en minutos)
UPDATE_INTERVAL_MINUTES=60
MODEL_RETRAIN_INTERVAL_DAYS=7

# Configuración de logging
LOG_LEVEL=INFO
LOG_FILE=./logs/maransa_ai.log

# Redis para cache (opcional)
REDIS_URL=redis://localhost:6379/0

# Configuración de seguridad
API_KEY=tu_api_key_secreta
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Configuración específica de Ecuador
DEFAULT_TIMEZONE=America/Guayaquil
DEFAULT_CURRENCY=USD